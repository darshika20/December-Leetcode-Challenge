/**
* author: Darshika
* Question Link : https://leetcode.com/problems/power-of-two/
* Time Complexity : O(1)
* Space Complexity : O(1)
*/

class Solution {
    public boolean isPowerOfTwo(int n) {
        for(int i = 0;i<32 && (1<<i) <= n ; i++) {
            if( n == (1 << i)) {
                return true;
            }
        }
        return false;
    }
}
